<div id="main">
  <div class="right">
    <h3>Forgot your password?</h3>

    <%= form_for(resource_name, resource, :url => password_path(resource_name)) do |f| %>
        <%= f.error_messages %>

        <p><%= f.label :email %></p>

        <p><%= f.text_field :email, :size => 70 %></p>

        <p><%= f.submit "Send me reset password instructions", :class => "button" %></p>
        <p><%= render :partial => "devise/shared/links" %></p>
    <% end %>
  </div>
</div>