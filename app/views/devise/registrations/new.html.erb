<div id="main">
  <div class="right">
    <h3>Sign Up</h3>

    <%= form_for(resource_name, resource, :url => registration_path(resource_name)) do |f| %>
        <%= f.error_messages %>
        <p><%= f.label :email %></p>

        <p><%= f.text_field :email, :size => 70 %></p>

        <p><%= f.label :password %></p>

        <p><%= f.password_field :password, :size => 70 %></p>

        <p><%= f.label :password_confirmation %></p>

        <p><%= f.password_field :password_confirmation, :size => 70 %></p>

        <p><%= f.submit "Sign up", :class => "button" %></p>
        <p><%= render :partial => "devise/shared/links" %></p>
    <% end %>
  </div>
</div>